<!DOCTYPE html>
<html lang="en">
    <%- include('components/head') %>
    <body>
        <%- include('components/header') %>
        <div class="container-md body-wrapper">
            <%- include('components/left-sidebar') %>
            <main class="main-wrapper">
                <section class="form-practice">
                    <h2>Table Practice</h2>
                    <table>
                        <thead>
                            <tr>
                                <th rowspan="2">Num.</th>
                                <th rowspan="2">Name</th>
                                <th colspan="2">Dimension</th>
                            </tr>
                            <tr>
                                <th>Weight</th>
                                <th>Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Earth</td>
                                <td>????</td>
                                <td>????</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Updating...</td>
                            </tr>
                        </tfoot>
                    </table>
                    <hr>
                    <h2>Form Practice</h2>
                    <form id="searchGoogle" action="https://www.google.com/search">
                        <label for="planetNameToSearchGoogle">Search by Google:</label>
                        <input type="text" id="planetNameToSearchGoogle" name="q" placeholder="planet name">
                        <button>Search</button>
                    </form>
                    <form id="searchOnPage" action="/planet">
                        <label for="planetNameToSearch">Search in this site:</label>
                        <input type="text" id="planetNameToSearch" name="planetName" placeholder="planet name">
                        <button>Search</button>
                    </form>
                    <form action="/planet-info">
                        <div>
                            <label for="selectPlanet">Select a planet:</label>
                            <select id="selectPlanet" name="selectPlanet">
                                <option value="Earth">Earth</option>
                                <option value="Jupiter">Jupiter</option>
                            </select>
                        </div>
                        <label for="includeDwarfPlanets">Include dwarf planets:</label>
                        <input type="checkbox" id="includeDwarfPlanets" name="includeDwarfPlanets" value="yes">
                        <div>
                            <label>Select view option:</label>
                            <label for="viewWeight">Weight:</label>
                            <input type="radio" id="viewWeight" name="viewOption" value="weight">
                            <label for="viewSize">Size:</label>
                            <input type="radio" id="viewSize" name="viewOption" value="size">
                        </div>
                        <button>View</button>
                    </form>
                    <form action="/comment">
                        <div>
                            <label for="rateNumber">Rate Number:</label>
                            <input type="range" id="rateNumber" name="rateNumber" min="1" max="10">
                        </div>
                        <div>
                            <label for="comment">Your comment:</label>
                            <br>
                            <textarea id="comment" name="comment" rows="5" placeholder="your comment"></textarea>
                        </div>
                        <button>Send comment</button>
                    </form>
                    <form action="/subscribe">
                        <div>
                            <label for="email">Want to get news? Leave your email here:</label>
                            <input type="email" id="email" name="email" required minlength="5" maxlength="50"
                                   placeholder="your email">
                        </div>
                        <button>Subscribe</button>
                    </form>
                </section>
            </main>
            <%- include('components/right-sidebar') %>
        </div>
        <%- include('components/footer') %>
    </body>
</html>