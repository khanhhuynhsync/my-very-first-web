<!DOCTYPE html>
<html lang="en">
    <%- include('components/head') %>
    <body
    <% if (planetInfo) { %>
        onload="displayPlanetImg(`<%= planetInfo.picture %>`)"
            <% } %>
    >
        <%- include('components/header') %>
        <div class="container-md body-wrapper">
            <%- include('components/left-sidebar') %>
            <main class="main-wrapper">
                <% if (planetInfo) { %>
                    <div class="planet-info">
                        <h1><%= planetInfo.name %></h1>
                    </div>
                    <iframe src="https://eyes.nasa.gov/apps/solar-system/#/<%= planetInfo.name.toLowerCase() %>" width="100%" height="600px"></iframe>
                    <div class="planet-detail-info">
                        <h2>Description</h2>
                        <p><%= planetInfo.description %></p>

                        <h2>Distance from Sun</h2>
                        <p><%= planetInfo.distanceFromSun %></p>

                        <h2>Year length</h2>
                        <p><%= planetInfo.yearLength %></p>

                        <h2>Number of Moons</h2>
                        <p><%= planetInfo.numberOfMoons %></p>

                        <h2>Namesake</h2>
                        <p><%= planetInfo.namesake %></p>

                        <h2>Planet texture</h2>
                        <img src="<%= planetInfo.textureUrl %>" alt="<%= planetInfo.name %>">
                    </div>
                <% } else { %>
                    Under construction.
                <% } %>
            </main>
            <%- include('components/right-sidebar') %>
        </div>
        <%- include('components/footer') %>
        <script src="/javascripts/planet-detail.js"></script>
    </body>
</html>